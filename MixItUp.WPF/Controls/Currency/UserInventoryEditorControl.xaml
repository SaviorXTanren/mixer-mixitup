<UserControl x:Class="MixItUp.WPF.Controls.Currency.UserInventoryEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MixItUp.WPF.Controls.Currency"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="5,5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding Name}" Grid.Row="0" Style="{StaticResource HeaderTextBlock}" TextDecorations="Underline" />

        <StackPanel x:Name="InventoryItemsStackPanel" Grid.Row="2" Margin="20,0,0,0" />
    </Grid>
</UserControl>
 