<Windows:LoadingWindowBase x:Class="MixItUp.WPF.Windows.Wizard.NewUserWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MixItUp.WPF.Windows.Wizard"
        xmlns:Controls="clr-namespace:MixItUp.WPF.Controls"
        xmlns:Windows="clr-namespace:MixItUp.WPF.Windows"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:UsersControls="clr-namespace:MixItUp.WPF.Controls.Users"
        mc:Ignorable="d"
                           
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.FontWeight="Medium"
        TextElement.FontSize="14"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"   
                     
        Icon="./../../Logo.ico"                        
        Title="Mix It Up - New User Wizard" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <MaterialDesign:DialogHost x:Name="MDDialogHost" Identifier="RootDialog" />

        <Grid x:Name="MainGrid" Grid.Row="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" x:Name="PagesGrid" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid x:Name="IntroPageGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Welcome to Mix It Up!</TextBlock>

                    <TextBlock Grid.Row="2" TextWrapping="Wrap" Width="390">This wizard will walk you through getting started with Mix It Up and getting some initial settings in place. If you wish to, you can skip this wizard by simply closing this window.</TextBlock>
                </Grid>

                <Grid x:Name="BotLoginPageGrid" Visibility="Collapsed" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Connect Mixer Bot Acount</TextBlock>

                    <GroupBox Grid.Row="2" Header="Mixer Bot Account">
                        <Grid Grid.Row="2" HorizontalAlignment="Center" Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Width="550" TextWrapping="Wrap">This will allow you to log in with a Mixer account that you use as your Bot in your stream. If you do not have a Bot account, you can create one now or you can ignore this.</TextBlock>

                            <Grid Grid.Row="2" x:Name="BotLogInGrid" Visibility="Visible" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" x:Name="BotLogInButton" Click="BotLogInButton_Click">Bot Log In</Button>
                            </Grid>

                            <Grid Grid.Row="2" x:Name="BotLoggedInGrid" Visibility="Hidden" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <UsersControls:UserProfileAvatarControl Grid.Column="0" x:Name="BotProfileAvatar" />

                                <TextBlock Grid.Column="2" x:Name="BotLoggedInNameTextBlock" VerticalAlignment="Center" />

                            </Grid>

                        </Grid>
                    </GroupBox>

                </Grid>

                <Grid x:Name="ExternalServicesPageGrid" Visibility="Collapsed" Margin="20,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Connect To A Streaming Software</TextBlock>

                    <GroupBox Grid.Row="2" Header="OBS Studio (OBS 21.1 or higher)">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap">To connect OBS Studio, install the websocket plugin and enable it in OBS Studio under Tools > Websocket server settings. Once done, you can connect to the OBS Studio with the default settings:</TextBlock>

                            <Grid Grid.Row="2" HorizontalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="0" x:Name="InstallOBSStudioPlugin" Click="InstallOBSStudioPlugin_Click" Width="120">Install Plugin</Button>

                                <Button Grid.Column="2" x:Name="ConnectToOBSStudioButton" Click="ConnectToOBSStudioButton_Click" Width="200">Connect To OBS Studio</Button>
                                <TextBlock Grid.Column="2" x:Name="OBSStudioConnectedSuccessfulTextBlock" Visibility="Collapsed" HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlock}" VerticalAlignment="Center">Connection Successful!</TextBlock>
                            </Grid>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="4" Header="XSplit">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap">In XSplit, navigate to "Extensions" -> "Add custom extension" in XSplit and select the file path listed below. Start the extension by selecting it from the Extensions menu, then you can connect to XSplit:</TextBlock>

                            <Grid Grid.Row="2" Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Column="0" x:Name="XSplitExtensionPathTextBox" IsReadOnly="True" MaterialDesign:HintAssist.Hint="XSplit Mix It Up Extension" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>

                                <Button Grid.Column="2" x:Name="ConnectToXSplitButton" Click="ConnectToXSplitButton_Click" Width="200">Connect To XSplit</Button>
                                <TextBlock Grid.Column="2" x:Name="XSplitConnectedSuccessfulTextBlock" Visibility="Collapsed" HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlock}" VerticalAlignment="Center">Connection Successful!</TextBlock>
                            </Grid>

                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="6" Header="Streamlabs OBS">
                        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="20" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" TextWrapping="Wrap">To connect to Streamlabs OBS, click the button below to enable connection:</TextBlock>

                            <Button Grid.Row="2" x:Name="ConnectToSLOBSButton" Click="ConnectToSLOBSButton_Click" Width="200">Connect To SLOBS</Button>
                            <TextBlock Grid.Row="2" x:Name="SLOBSConnectedSuccessfulTextBlock" Visibility="Collapsed" HorizontalAlignment="Center" Style="{StaticResource HeaderTextBlock}" VerticalAlignment="Center">Connection Successful!</TextBlock>

                        </Grid>
                    </GroupBox>

                </Grid>

                <Grid x:Name="ImportScorpBotSettingsPageGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Import ScorpBot Data</TextBlock>
                    
                    <StackPanel Grid.Row="2" Width="675">
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">If you previously used ScorpBot, we can import several things from your settings to get you ramped up faster in Mix It Up! Currently, the following features can be imported:</TextBlock>

                        <TextBlock Margin="20,10,0,0">- Chat Commands</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Timers</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Banned Words</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Quotes</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Viewer Data (Currency, Rank, &amp; Hours)</TextBlock>
                        <TextBlock Margin="40,0,0,0" TextWrapping="Wrap">- (NOTE: If your Ranks ("points1") are based on Hours, we will create an additional Currency based on the points used in "points1")</TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="0,30,0,0">To get started, use the File Dialog below to select your ScorpBot installation directory (the folder where ScorpBot.exe is located) or can you skip this by doing nothing and clicking Next:</TextBlock>
                    </StackPanel>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Row="2" x:Name="ScorpBotDirectoryTextBox" MaterialDesign:HintAssist.Hint="ScorpBot Installation Directory" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <Button Grid.Column="2" Grid.Row="0" x:Name="ScorpBotDirectoryBrowseButton" Click="ScorpBotDirectoryBrowseButton_Click">Browse</Button>
                    </Grid>
                </Grid>

                <Grid x:Name="ImportStreamlabsChatBotSettingsPageGrid" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="15" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Import Streamlabs Chat Bot Data</TextBlock>

                    <StackPanel Grid.Row="2" Width="675">
                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,0">If you previously used Streamlabs Chat Bot, we can import several things from your data to get you ramped up faster in Mix It Up! To use this feature, you must have some form of Microsoft Excel installed. Currently, the following features can be imported:</TextBlock>

                        <TextBlock Margin="20,10,0,0">- Chat Commands</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Timers</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Quotes</TextBlock>
                        <TextBlock Margin="20,0,0,0">- User Join Events</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Viewer Data (Currency, Rank, &amp; Hours)</TextBlock>

                        <TextBlock Margin="0,20,0,0" TextWrapping="Wrap">NOTE: Streamlabs Chat Bot does not export its settings, only the data. This means that you will still need to set up certain things afterwards. This includes, but is not limited to:</TextBlock>
                        <TextBlock Margin="20,10,0,0">- Timer Frequency</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Counters</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Currency/Rank Name, Rates, &amp; Bonuses</TextBlock>
                        <TextBlock Margin="20,0,0,0">- Moderation Rules</TextBlock>

                        <TextBlock TextWrapping="Wrap" Margin="0,20,0,0">To get started, click on the person icon in the bottom-left corner of Streamlabs Chat Bot, then select the Cloud option. Pick a folder for the Cloud Service Folder option, click Save Settings, then click Create Excel Files. Navigate to the folder you just selected by clicking the Browse button below this and select the file Data.xlsx. You can also skip this by clicking Next:</TextBlock>
                    </StackPanel>

                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Row="2" x:Name="StreamlabsChatBotDataFilePathTextBox" MaterialDesign:HintAssist.Hint="Streamlabs Chat Bot Data File" Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

                        <Button Grid.Column="2" Grid.Row="0" x:Name="StreamlabsChatBotDataFileBrowseButton" Click="StreamlabsChatBotDataFileBrowseButton_Click">Browse</Button>
                    </Grid>
                </Grid>

                <Grid x:Name="ImportSoundwaveInteractiveSettingsGrid" Visibility="Collapsed" Width="550">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HeaderTextBlock}" HorizontalAlignment="Center">Soundwave Interactive Settings</TextBlock>

                    <TextBlock TextWrapping="Wrap" Grid.Row="2">We can import your profiles from Soundwave Interactive that you used.</TextBlock>

                    <TextBlock TextWrapping="Wrap" Grid.Row="4">We will create a brand new Interactive Game on Mixer for every profile you wish to import. If you created any other Interactive Games that share the same name as one of your Soundwave Interactive profiles, we will be unable to import that profile over and its checkbox will be disabled.</TextBlock>

                    <TextBlock TextWrapping="Wrap" Grid.Row="6">Please select the profiles below that you would like us to import for you:</TextBlock>

                    <DataGrid x:Name="SoundwaveInteractiveProfilesDataGrid" Grid.Row="8" Style="{StaticResource StandardDataGrid}" CellStyle="{StaticResource StandardDataGridCell}" Width="400" Height="225" VerticalScrollBarVisibility="Visible">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Profile" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                            <DataGridTemplateColumn Header="Add">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox x:Name="SoundwaveProfileCheckBox" DataContext="{Binding}" IsEnabled="{Binding CanBeImported}" Checked="SoundwaveProfileCheckBox_Checked" Unchecked="SoundwaveProfileCheckBox_Checked" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <Grid x:Name="SetupCompletePageGrid" Visibility="Collapsed" Width="550">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="20" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock TextWrapping="Wrap" Grid.Row="0" HorizontalAlignment="Center">Congratulations, you're all set to start using Mix It Up! </TextBlock>

                    <TextBlock TextWrapping="Wrap" Grid.Row="2">We have several resources available to you for how to get starting using Mix It Up, including a YouTube tutorial series, our extensive Wiki, as well as direct contact for questions or support:</TextBlock>

                    <Grid Grid.Row="4" Margin="20,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <TextBlock>YouTube Series: <Hyperlink NavigateUri="https://www.youtube.com/channel/UCcY0vKI9yqcMTgh8OzSnRSA" RequestNavigate="Hyperlink_RequestNavigate">https://www.youtube.com/channel/MixItUp</Hyperlink></TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                            <TextBlock>Wiki Documentation: <Hyperlink NavigateUri="https://github.com/SaviorXTanren/mixer-mixitup/wiki" RequestNavigate="Hyperlink_RequestNavigate">https://github.com/SaviorXTanren/mixer-mixitup/wiki</Hyperlink></TextBlock>
                        </StackPanel>

                        <StackPanel Grid.Row="4" Orientation="Horizontal">
                            <TextBlock>Questions/Support: support@mixitup.com</TextBlock>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="40" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" TextWrapping="Wrap" Width="450">Don't know how a feature works or want more info? Simply click on the Help icon on the top bar of the main window to find out more!</TextBlock>

                        <Button Grid.Column="2" Width="40" HorizontalAlignment="Center" ToolTip="Help">
                            <MaterialDesign:PackIcon Kind="Help" Height="24" Width="24" Margin="-13,-10" Foreground="{StaticResource WhiteColor}" />
                        </Button>
                    </Grid>

                    <TextBlock TextWrapping="Wrap" Grid.Row="8" HorizontalAlignment="Center">Thanks for giving Mix It Up a try and we hope it meets all your needs!</TextBlock>
                    
                </Grid>
            </Grid>

            <Grid Grid.Row="2" x:Name="WizardButtonsGrid" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusMessageTextBlock" Grid.Column="0" VerticalAlignment="Center" />

                <Button x:Name="BackButton" Grid.Column="2" Click="BackButton_Click" IsEnabled="False">&lt; Back</Button>

                <Button x:Name="NextButton" Grid.Column="4" Click="NextButton_Click">Next &gt;</Button>
            </Grid>
        </Grid>

        <Controls:LoadingStatusBar x:Name="StatusBar" Grid.Row="2" />
    </Grid>
</Windows:LoadingWindowBase>
